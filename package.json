{
  "name": "news-scraper",
  "description": "crawling naver news service",
  "author": "sunggyujeong",
  "main": "electron/main.ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "concurrently \"npm run serve\" \"npm run start:server\"",
    "start:server": "node src/backend/main.ts",
    "electron:start": "electron .",
    "build": "vue-cli-service build",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "build": {
    "productName": "NewsScraper",
    "appId": "com.electron.news-scraper",
    "asar": true,
    "protocols": {
      "name": "NewsScraper",
      "schemes": [
        "NewsScraper"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./resources/installer/icon.icns"
    },
    "dmg": {
      "title": "NewsScraper",
      "icon": "./resources/installer/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./resources/installer/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/linuxicon"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "en_US",
        "ko-KR"
      ],
      "createDesktopShortcut": true,
      "shortcutName": "news-scraper",
      "createStartMenuShortcut": true,
      "menuCategory": "news-scraper"
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  },
  "devDependencies": {
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vue/cli-service": "^5.0.8",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.2.0"
  },
  "dependencies": {
    "ant-design-vue": "^4.2.6",
    "axios": "^1.7.9",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "electron-router": "^0.5.1",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "puppeteer": "^24.1.0",
    "vue": "^3.5.13",
    "vue-loading-overlay": "^6.0.6",
    "vue-router": "^4.5.0",
    "vuex": "^4.1.0",
    "wait-on": "^8.0.2",
    "xlsx-js-style": "^1.2.0"
  }
}
